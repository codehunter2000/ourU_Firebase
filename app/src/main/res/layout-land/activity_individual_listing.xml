<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".IndividualListing">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:text="Title"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/ISBN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:text="ISBN"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:text="Condition"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:text="Price"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:text="Description"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/book_image"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Image of Book"/>

            <Button
                android:id="@+id/contact_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:onClick="contactSellerClicked"
                android:text="Contact Seller"
                android:textSize="30dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/create_post"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="createPostClicked"
            android:src="@drawable/create_post" />

        <ImageButton
            android:id="@+id/view_listings"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="viewListingsClicked"
            android:src="@drawable/view_listings" />

        <ImageButton
            android:id="@+id/my_listings"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="myListingsClicked"
            android:src="@drawable/my_listings" />

        <ImageButton
            android:id="@+id/sign_out"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="signOutClicked"
            android:src="@drawable/sign_out" />

        <ImageButton
            android:id="@+id/blank"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:src="@drawable/blank" />
    </LinearLayout>
</LinearLayout>